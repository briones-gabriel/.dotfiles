""" Map leader to space ---------------------
let mapleader=" "

""" Plugins ---------------------------------
set NERDTree
set argtextobj
set textobj-entire
set surround

""" Plugin settings -------------------------
let g:argtextobj_pairs="[:],(:),<:>"

""" Common settings -------------------------
set number
set relativenumber
set clipboard=unnamedplus
set clipboard+=ideaput
set showmode
set ruler
set so=4
set incsearch
set nu
set showmatch

""" Idea specific settings ------------------
set ideajoin
set ideastatusicon=gray
set idearefactormode=keep
set ideamarks

""" Mappings --------------------------------
nmap <Leader>w   :w<CR>
nmap <Leader>q   :q<CR>
nmap <Leader>c   :q<CR>
:map <leader>t   :NERDTreeFind<CR>
:map <leader>r   <Action>(RenameElement)
:map <leader>s   <Action>(Stop)
:map <leader>f   <Action>(ReformatWithPrettierAction)
:map <leader>e   <Action>(ShowErrorDescription)
:map <leader>k   <Action>(ToggleFullScreen)
:map <leader>/   <Action>(CommentByLineComment)

:map <C-l>       <Action>(NextTab)
:map <C-h>       <Action>(PreviousTab)

:map <S-l>       <Action>(SplitVertically)
:map <S-j>       <Action>(SplitHorizontally)
:map <S-s>       <Action>(Switcher)

:map ;d          <Action>(Debug)
:map ;r          <Action>(Run)
:map ;t          <Action>(ActivateTerminalToolWindow)

:map gu          <Action>(FindUsages)
:map gc          <Action>(GotoClass)
:map gf          <Action>(GotoFile)
